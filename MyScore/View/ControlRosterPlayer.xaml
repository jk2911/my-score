<UserControl x:Class="MyScore.View.ControlRosterPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyScore.View"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding Number}" Height="25" Width="70"/>
        <Label Content="{Binding Name}" Height="25" Width="120"/>
        <Label Content="{Binding Country}" Height="25" Width="120"/>
        <Label Content="{Binding Age}" Height="25" Width="25"/>
    </StackPanel>
</UserControl>
